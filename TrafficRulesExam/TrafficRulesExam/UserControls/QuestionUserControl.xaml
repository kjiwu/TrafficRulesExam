<UserControl x:Class="TrafficRulesExam.UserControls.QuestionUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:TrafficRulesExam.UserControls"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="300"
             d:DesignWidth="400">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal"
                    Margin="8">
            <TextBlock Text="题目:"
                       VerticalAlignment="Center" />
            <TextBlock Text="1"
                       x:Name="tbkTitle"
                       VerticalAlignment="Center" />
        </StackPanel>

        <TextBlock Text="驾驶机动车在道路上违反道路交通安全法的行为，属于什么行为？"
                   Grid.Row="1"
                   x:Name="tbkQuestion"
                   TextWrapping="Wrap"
                   Margin="8"/>

        <Image Grid.Row="2"
               Margin="8"
               x:Name="imageControl"
               HorizontalAlignment="Left"/>

        <StackPanel Grid.Row="3"
                    Margin="8"
                    x:Name="spOptions">
            <TextBlock Text="A、违章行为"
                       TextWrapping="Wrap" />
            <TextBlock Text="B、违法行为"
                       TextWrapping="Wrap" />
            <TextBlock Text="C、过失行为"
                       TextWrapping="Wrap" />
            <TextBlock Text="D、违规行为"
                       TextWrapping="Wrap" />
        </StackPanel>
    </Grid>
</UserControl>
